[flake8]
select = ANN,B,B9,BLK,C,D,DAR,E,F,I,S,W
ignore = E203,E501,W503,DAR000,S101,ANN101,ANN102
per-file-ignores = tests/*:ANN101,ANN102,S101,E800,noxfile.py:E800
max-line-length = 88
max-complexity = 33
import-order-style = pycharm
application-import-names = prtecan,tests
docstring-convention = numpy
