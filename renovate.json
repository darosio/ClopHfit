{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 9am on thursday"
    ]
  },
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "prFooter": " (#{{prNumber}})",
  "automerge": false,
  "rangeStrategy": "bump",
  "commitMessagePrefix": "build(deps):",
  "commitMessageAction": "bump",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "from {{currentVersion}} to {{newVersion}}",
  "labels": [
    "dependencies"
  ],
  "pre-commit": {
    "enabled": true,
    "managerFilePatterns": [
      "/^\\.pre-commit-config\\.yaml$/"
    ],
    "commitMessagePrefix": "build(hooks):",
    "groupName": "pre-commit hooks"
  },
  "packageRules": [
    {
      "description": "Disable GitHub Actions updates - managed by cookiecutter template",
      "matchManagers": [
        "github-actions"
      ],
      "enabled": false
    },
    {
      "description": "Disable dev/lint/test dependency updates - managed by cookiecutter template",
      "matchFileNames": [
        "**/pyproject.toml"
      ],
      "matchDepTypes": [
        "dependency-groups"
      ],
      "matchDepNames": [
        "git-cliff",
        "mdformat",
        "mdformat-gfm",
        "pylsp-mypy",
        "ruff",
        "python-lsp-ruff",
        "cruft",
        "pre-commit",
        "coverage",
        "mypy",
        "pandas-stubs",
        "pygments",
        "pytest",
        "scipy-stubs",
        "types-click",
        "types-setuptools",
        "xdoctest"
      ],
      "enabled": false
    },
    {
      "matchDepTypes": [
        "project.optional-dependencies",
        "dependency-groups"
      ],
      "groupName": "optional dependencies",
      "labels": [
        "dependencies",
        "optional"
      ],
      "commitMessagePrefix": "chore(dep):"
    },
    {
      "matchManagers": [
        "pre-commit"
      ],
      "labels": [
        "dependencies",
        "pre-commit"
      ],
      "commitMessagePrefix": "chore(hooks):"
    },
    {
      "matchFileNames": [
        "**/pyproject.toml"
      ],
      "matchDepNames": [
        "python"
      ],
      "enabled": false
    },
    {
      "matchDepNames": [
        "sphinx",
        "sphinx-autodoc-typehints"
      ],
      "enabled": false,
      "labels": [
        "dependencies",
        "manual-update"
      ]
    }
  ]
}
